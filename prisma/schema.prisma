generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id          Int      @id @default(autoincrement())
  login       String   @unique
  password    String
  role        Role     @default(USER)
  orders      Order[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id          Int      @id @default(autoincrement())
  images      String[]
  title       String   
  price       Int
  oldPrice    Int?
  description String
  createdAt   DateTime @default(now())
}

model Review {
  id          Int      @id @default(autoincrement())
  name        String 
  image       String?
  type        String
  description String
  createdAt   DateTime @default(now())
}

enum Currency {
  RUB
  USD
  EUR
}

model Settings {
  id           Int       @id @default(autoincrement())
  bannerImg    String    @default("")
  buttonText   String    @default("Купить")
  currency     Currency  @default(USD)
  telegram     String    @default("")
  textPrimary        String    @default("#000000")
  textSecondary      String    @default("#575757")
  secondaryMain      String    @default("#300216")
  secondaryDark      String    @default("#541E35")
  secondaryLight     String    @default("#FF6A55")
  backgroundDefault  String    @default("#F7F1EE")
  backgroundPaper    String    @default("#ffffff")
  gradient1          String    @default("#300216")
  gradient2          String    @default("#FF7251")
}

model Payments {
  id          Int      @id @default(autoincrement())
  name        String
  requisites  String
  order       Order?
}

enum Status {
  paid
  await
}

model Order {
  uuid        String   @id @default(uuid())
  status      Status   @default(await)
  paymentId   Int      @unique
  payment     Payments @relation(fields: [paymentId], references: [id])
  userId      Int?     @unique
  user        User?    @relation(fields: [userId], references: [id])
  productId   Int
  count       Int
  total       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}