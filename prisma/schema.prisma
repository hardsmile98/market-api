generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id          Int      @id @default(autoincrement())
  login       String   @unique
  password    String
  role        Role     @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id          Int      @id @default(autoincrement())
  images      String[]
  title       String   
  price       String
  oldPrice    String?
  description String
  createdAt   DateTime @default(now())
}

model Review {
  id          Int      @id @default(autoincrement())
  name        String 
  image       String?
  type        String
  description String
  createdAt   DateTime @default(now())
}